generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String
  avatar        String
  password      String
  shoppingLists ShoppingList[]
  updatedAt     DateTime?      @updatedAt
  createdAt     DateTime
  session       Session?

  shoppingItems ShoppingItem[]
}

model Session {
  id                    Int     @id @default(autoincrement())
  userId                Int     @unique
  refreshToken          String
  refreshTokenExpiresAt String?
  user                  User?   @relation(fields: [userId], references: [id])
}

model ShoppingList {
  id        Int            @id @default(autoincrement())
  name      String
  status    String
  items     ShoppingItem[]
  createdAt DateTime
  updatedAt DateTime       @updatedAt
  user      User?          @relation(fields: [userId], references: [id])
  userId    Int
}

model ShoppingItem {
  id                 Int              @id @default(autoincrement())
  name               String
  note               String?
  imageUrl           String?
  category           ShoppingCategory @relation(fields: [shoppingCategoryId], references: [id])
  createdAt          DateTime
  shoppingList       ShoppingList[]
  shoppingCategoryId Int
  user               User?            @relation(fields: [userId], references: [id])
  userId             Int
}

model ShoppingCategory {
  id    Int            @id @default(autoincrement())
  name  String
  items ShoppingItem[]
}
